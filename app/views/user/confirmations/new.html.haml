.container.devise-section
  .row
    .col-lg-6
      = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, :class => 'form-horizontal' }) do |f|
        %fieldset
          %legend= t('confirmation.resend')
          = devise_error_messages!
          .form-group
            = f.label :email, class: 'col-lg-2 control-label'
            .col-lg-10
              = f.email_field :email, class: 'form-control', autofocus: true
          .form-group
            .col-lg-10.col-lg-offset-2
              = f.submit t('confirmation.resend'), class: 'btn btn-primary'
  = render 'shared/links'
