          %li
            %a.ajax-link{:href => "/user/manageads"}
              %i.glyphicon.glyphicon-pencil
              %span
                = t('admin.manage_your_ads')
          %li
            %a.ajax-link{:href => "/user/manageprofile"}
              %i.glyphicon.glyphicon-user
              %span
                = t('admin.left_menu.manage_profile')
        - else
          %li
            %a.ajax-link{:href => "/user/index"}
              %i.glyphicon.glyphicon-home
              %span
                = t('admin.dashboard')
          %li
            %a.ajax-link{:href => "/user/manageads"}
              %i.glyphicon.glyphicon-pencil
              %span
                = t('admin.manage_your_ads')
          %li
            %a.ajax-link{:href => "/user/manageprofile"}
              %i.glyphicon.glyphicon-user
              %span
                = t('admin.left_menu.manage_profile')
