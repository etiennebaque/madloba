            %a.ajax-link{:href => "/user/generalsettings"}
              %i.glyphicon.glyphicon-wrench
              %span
                = t('admin.general_settings_menu')
          %li
            %a.ajax-link{:href => "/user/mapsettings"}
              %i.glyphicon.glyphicon-map-marker
              %span
                = t('admin.left_menu.map_settings')
          %li
            %a.ajax-link{:href => "/user/areasettings"}
              %i.glyphicon.glyphicon-globe
              %span
                = t('admin.left_menu.area_settings')
