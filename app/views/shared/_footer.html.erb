<% if is_in_admin_panel %>
    <!-- Footer of the admin panel -->
    <hr>

    <footer class="row">
      <p class="col-md-4 col-sm-4 col-xs-12">
        Admin theme from <a href="http://usman.it/free-responsive-admin-template">Charisma</a> -
        Powered by <a href="http://madloba.org">Madloba</a>
      </p>
    </footer>
<% else %>
    <!-- Footer of the regular pages -->
    <footer id="footer">
      <div class="container-fluid lower-footer">
        <% if is_in_setup_mode %>
            <!-- Footer for setup pages -->
            <p class="muted footer-message">New website powered by <a href="http://madloba.org" target="_blank">Madloba</a></p>
        <% else %>
            <!-- Footer for regular pages -->
            <p class="muted footer-message"><%= site_name %> - Powered by <a href="http://madloba.org" target="_blank">Madloba</a></p>
        <% end %>
      </div>
    </footer>
<% end %>