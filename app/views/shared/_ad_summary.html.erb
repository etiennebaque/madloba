<!-- Left-hand side: Items -->
<div class="show_ad_paragraph">
  <% if @ad.is_giving %>
      <label class="ad-label"><%= t('ad.giving_away') %></label>
  <% else %>
      <label class="ad-label"><%= t('ad.accepting') %></label>
  <% end %>
  <span>
    <ul>
      <% @ad.ad_items.each do |ad_item| %>
          <li style="list-style-type: none;"><i class="fa <%= ad_item.item.category.icon %>" style="color: <%= "#{MARKER_COLORS[ad_item.item.category.marker_color]}" %>;"></i>&nbsp;<%= ad_item.item.capitalized_name %></li>
      <% end %>
    </ul>
    </span>
</div>

<!-- Left-hand side: Location -->
<div class="show_ad_paragraph">
  <label><%= t('location.location')+':' %></label>
  <span><%= @ad.location.name_and_or_full_address %></span>
</div>


<% if @ad.location.loc_type == 'exact' %>
    <!-- Left-hand side: Phone number -->
    <% if @ad.location.website && @ad.location.website != '' %>
        <div class="show_ad_paragraph">
          <label><%= t('location.phone_number') %></label>
          <span><%= @ad.location.phone_number %></span>
        </div>
    <% end %>

    <!-- Left-hand side: Website -->
    <% if @ad.location.website && @ad.location.website != '' %>
        <div class="show_ad_paragraph">
          <label><%= t('ad.location_website') %></label>
          <span><a href="<%= @ad.location.full_website_url %>" target="_blank"><%= @ad.location.website %></a></span>
        </div>
    <% end %>

    <!-- Location description -->
    <% if @ad.location.description && @ad.location.description != '' %>
        <div class="show_ad_paragraph">
          <label><%= t('ad.location_description') %></label>
          <span><%= simple_format(@ad.location.description) %></span>
        </div>
    <% end %>
<% end %>


<!-- Ad description -->
<div class="show_ad_paragraph">
    <label><%= t('ad.description') %>:</label>
    <span><%= simple_format(@ad.description) %></span>
</div>
