<!DOCTYPE html>
<html>
<head>
  <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
</head>
<body>
<strong><%= t('mailer.dear', name: @user.first_name) %></strong>
<p>
  <%= t('mailer.ad_created', site_name: @site_name) %>
  <ul>
    <li><%= t('mailer.ad_title') %>: <%= @ad.title %></li>
    <li><%= t('mailer.item') %>: <%= @ad.item.name %></li>
    <li><%= t('mailer.description') %>: <%= @ad.description %></li>
    <% if @ad.is_giving %>
        <li><%= t('mailer.where_pick_up') %>: <%= @ad.location.name_and_or_full_address %></li>
    <% else %>
        <li><%= t('mailer.where_to_drop') %>: <%= @ad.location.name_and_or_full_address %></li>
    <% end %>
  </ul>
</p>
<p>
  <%= t('mailer.ad_will_expire', day_number: @max_expire_days , expire_date: @ad.expire_date.to_s ) %>
</p>
<p>
  <%= t('mailer.manage_ad_html', :href => link_to(t('mailer.admin_panel'), @full_admin_url)) %>

</p>
<p><%= t('mailer.thanks') %><br />
<%= t('mailer.signature', name: @site_name) %></p>
</body>
</html>